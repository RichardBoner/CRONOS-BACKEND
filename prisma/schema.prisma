// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(nanoid()) @map("_id")
  name     String
  schedules String[]
  friends  String[]
}

model Schedule {
  id             String     @id @default(nanoid()) @map("_id")
  users          String[]
  creatorUserId  String
  date           String
  duration       String
  gameId         String
}